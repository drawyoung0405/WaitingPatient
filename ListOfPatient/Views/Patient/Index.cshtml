<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
@{
    int counter = 1;
}

    <h2>Danh Sách Bệnh Nhân</h2>
<table class="table">
    <thead>
        <tr>
            <th>Stt</th>
            <th>Tên</th>
            <th>Số CMND/CCCD</th>
            <th>Thời Gian Thêm</th>
            <th>Chức Năng</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@counter</td>
                <td>@patient.Name</td>
                <td>@patient.IdentificationNumber</td>
                <td>@patient.AddedTime.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-warning">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-info">Chi Tiết</a> |
                    <a asp-action="DeleteById" asp-route-id="@patient.Id" class="btn btn-danger">Xoá</a>
                </td>
                <td>@patient.Status.ToString()</td>
            </tr>
            counter += 1;
        }
    </tbody>
</table>
<a asp-action="CreatePatient" type="button" class="btn btn-success">Thêm bệnh nhân</a>
<br />
<br />
<a asp-action="GetFirstPatient" type="button" class="btn btn-success">Bệnh nhân đầu tiên</a>


