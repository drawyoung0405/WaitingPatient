<!-- Bootstrap Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Success</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Đã thêm bệnh nhân thành công!
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    window.onload = function () {
        // Show the Bootstrap modal
        var myModal = new bootstrap.Modal(document.getElementById('successModal'), {
            keyboard: false
        });
        myModal.show();

        // Set a timeout of 3 seconds to hide the modal and redirect
        setTimeout(function () {
            myModal.hide();
            window.location.href = '@Url.Action("GetPatientNotExamined")'; // Redirect to the Index page
        }, 500);
    };
</script>